# ========================================
# APPLICATION
# ========================================
APP_NAME=PharmaVerif API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ========================================
# SERVER
# ========================================
HOST=0.0.0.0
PORT=8000
AUTO_RELOAD=true

# ========================================
# API
# ========================================
API_V1_PREFIX=/api/v1
ENABLE_DOCS=true

# ========================================
# SECURITY - JWT
# ========================================
# ⚠️ IMPORTANT: Générer une vraie clé secrète en production!
# Commande: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGEZ_MOI_EN_PRODUCTION_UTILISEZ_UNE_CLE_ALEATOIRE_DE_32_CARACTERES
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ========================================
# CORS
# ========================================
# Liste des origines autorisées, séparées par des virgules
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ========================================
# DATABASE
# ========================================

# --- DÉVELOPPEMENT (SQLite) ---
DATABASE_URL=sqlite:///./pharmaverif.db

# --- PRODUCTION (PostgreSQL) ---
# Décommenter et configurer pour production
# DATABASE_URL=postgresql://user:password@localhost/pharmaverif

# Exemples de providers cloud:
# Heroku: postgresql://user:password@host.com:5432/dbname
# Railway: postgresql://user:password@containers-us-west-xxx.railway.app:5432/railway
# DigitalOcean: postgresql://doadmin:password@db-postgresql-xxx.ondigitalocean.com:25060/defaultdb?sslmode=require
# Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ========================================
# FILE UPLOAD
# ========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
# Extensions autorisées (ne pas modifier sans raison)
# ALLOWED_EXTENSIONS=.pdf,.xlsx,.xls,.csv,.jpg,.png

# ========================================
# OCR - TESSERACT
# ========================================
# Chemin vers l'exécutable Tesseract
# macOS (Homebrew): /usr/local/bin/tesseract ou /opt/homebrew/bin/tesseract
# Linux: /usr/bin/tesseract
# Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=fra

# ========================================
# OCR - AWS TEXTRACT (optionnel)
# ========================================
# Décommenter si vous utilisez AWS Textract
# AWS_ACCESS_KEY_ID=votre_access_key_id
# AWS_SECRET_ACCESS_KEY=votre_secret_access_key
# AWS_REGION=eu-west-1

# ========================================
# OCR - GOOGLE CLOUD VISION (optionnel)
# ========================================
# Décommenter si vous utilisez Google Cloud Vision
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ========================================
# OCR - CONFIGURATION
# ========================================
DEFAULT_OCR_PROVIDER=tesseract
ENABLE_OCR_FALLBACK=true
OCR_PREPROCESSING=true

# ========================================
# PARSING
# ========================================
PDF_DPI=300
EXCEL_MAX_ROWS=10000
CSV_ENCODING=utf-8

# ========================================
# EXPORT
# ========================================
EXPORT_DIR=exports
PDF_FONT=Helvetica

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/pharmaverif.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=60

# ========================================
# EMAILS (optionnel)
# ========================================
# Décommenter si vous utilisez l'envoi d'emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=votre_email@gmail.com
# SMTP_PASSWORD=votre_mot_de_passe_app
# SMTP_FROM=noreply@pharmaverif.com

# ========================================
# CACHE - REDIS (optionnel)
# ========================================
# Décommenter si vous utilisez Redis
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=300

# ========================================
# MONITORING - SENTRY (optionnel)
# ========================================
# Décommenter si vous utilisez Sentry pour monitoring
# SENTRY_DSN=https://xxx@sentry.io/xxx

# ========================================
# NOTES IMPORTANTES
# ========================================
#
# SÉCURITÉ:
# - Ne JAMAIS commiter ce fichier dans Git
# - Ajouter .env dans .gitignore
# - Utiliser des secrets managers en production (AWS Secrets Manager, etc.)
# - Changer SECRET_KEY en production
# - Utiliser PostgreSQL en production, pas SQLite
#
# PRODUCTION:
# - DEBUG=false
# - ENVIRONMENT=production
# - Configurer vraie base de données
# - Activer HTTPS
# - Configurer firewall
# - Backup réguliers
#
# ========================================
